<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp">

    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:background="@drawable/airport_code_bg"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/ms_medium"
            android:text="CCJ"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/_4sdp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvAirportPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ms_medium"
            android:text="Kozhikode"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/md_black_1000"/>

        <TextView
            android:id="@+id/tvAirportName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ms_regular"
            android:text="Calicut International Airport"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/md_grey_600"/>

    </LinearLayout>

</LinearLayout>